<h1>User Index</h1>

<table>
  <thead>
    <tr>
      <th>社員コード</th>
      <th>部署</th>
      <th>氏名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.employee_code %></td>
        <td><%= user.department.name %></td>
        <td><%= user.name %></td>
        <td><%= link_to "詳細", admin_user_path(user.id) %> <%= link_to "編集", edit_admin_user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>