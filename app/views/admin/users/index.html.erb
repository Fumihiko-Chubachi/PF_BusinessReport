<div class="container">
  <div class="row mt-5">
    <div class="mx-auto col-8">
      <%= link_to new_admin_user_path, class:"btn btn-success" do %>
        <span><i class="fas fa-plus"></i> ユーザー新規登録 </span>
      <% end %>
    </div>
  </div>
  <div class="row mt-2 mb-5">
    <div class="mx-auto col-4">
      <h2 class="d-flex align-items-center justify-content-center">社員一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>社員コード</th>
            <th>部署</th>
            <th>氏名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.employee_code %></td>
              <td><%= user.department.name %></td>
              <td><%= user.name %></td>
              <td><%= link_to "詳細", admin_user_path(user.id), class:"btn btn-success py-1" %></td>
              <td><%= link_to "編集", edit_admin_user_path(user.id), class:"btn btn-info py-1" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>