<div class="container">
  <div class="row my-5">
    <div class="mx-auto col-4">
      <h2 class="d-flex align-items-center justify-content-center">管理者ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table">
        <tr>
          <th><%= f.label :社員コード %></th>
          <td><%= f.text_field :employee_code, autofocus: true, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :パスワード %></th>
          <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="row">
        <div class="mx-auto col-4">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>