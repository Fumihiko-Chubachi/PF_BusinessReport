<div class="container">
  <div class="row my-5">
    <div class="mx-auto col10">
      <%= image_tag('logo_b.png') %>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-3">
      <!--ログイン状況によるリンク先分け-->
      <% if user_signed_in? %>
        <%= link_to "マイページへ戻る", public_user_path(current_user.id), class:"btn btn-info btn-sm btn-block mb-3 sign_in" %>
      <% elsif admin_signed_in? %>
        <%= link_to "管理者画面へ戻る", admin_departments_path, class:"btn btn-info btn-sm btn-block mb-3 sign_in" %>
      <% else %>
        <%= link_to new_user_session_path, class:"btn btn-info btn-sm btn-block mb-3 sign_in" do %>
          <span><i class="fas fa-sign-in-alt"></i> ユーザーログイン </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>