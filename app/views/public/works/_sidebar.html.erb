<!--サイドバー-->
<!--部署名表示-->
<div class="mt-4">
  <i class="fas fa-bookmark"></i> <%= current_user.department.name %>
</div>
<!--社員コード表示-->
<div class="mt-2">
  <i class="fab fa-gg"></i> <%= current_user.employee_code %>
</div>
<!--ユーザーネーム表示-->
<div class="mt-2">
  <i class="fas fa-user"></i> <%= current_user.name %>
</div>
<!--業務一覧リンク-->
<div class="mt-4">
  <%= link_to public_user_path(current_user.id), class:"text-dark", data: {"turbolinks"=>false} do  %>
    <span><i class="fas fa-envelope"></i> Works </span>
  <% end %>
</div>
<!--日報一覧リンク-->
<div class="mt-2">
  <%= link_to public_dailyreports_path, class:"text-dark", data: {"turbolinks"=>false} do %>
    <span><i class="fas fa-tablet-alt"></i> Dailyreports </span>
  <% end %>
</div>