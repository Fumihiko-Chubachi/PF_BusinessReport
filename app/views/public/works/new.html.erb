<div class="container">
  <!--エラーメッセージ-->
  <%= render 'layouts/error' %>
  <div class="row mt-4 mb-3">
    <div class="mx-auto col-12">
      <h2 class="d-flex align-items-center justify-content-center">新規業務依頼入力フォーム</h2>
    </div>
  </div>
  <div class="row">
    <div class="btn_custom mx-auto col-8">
      <%= form_with model: @work, url:public_works_path do |f| %>
      <table class="table">
        <tr>
          <th class="col-2">宛名</th>
          <td class="col-10"><%= f.collection_select :to_user_id, @target_user, :id, :name %></td>
        </tr>
        <tr>
          <th class="col-2">件名</th>
          <td class="col-10"><%= f.text_field :title, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-2">目的</th>
          <td class="col-10"><%= f.text_area :purpose, class:"form-control", rows: 5 %></td>
        </tr>
        <tr>
          <th class="col-2">背景</th>
          <td class="col-10"><%= f.text_area :background, class:"form-control", rows: 5 %></td>
        </tr>
        <tr>
          <th class="col-2">依頼内容</th>
          <td class="col-10"><%= f.text_area :body, class:"form-control", rows: 8 %></td>
        </tr>
      </table>
      <%= f.submit "送信", class:"btn btn-info col-4" %>
      <% end %>
    </div>
  </div>
</div>