<div class="container">
  <!--エラーメッセージ-->
  <%= render 'layouts/error' %>
  <div class="row mt-4 mb-3">
    <div class="mx-auto col-12">
      <h2 class="d-flex align-items-center justify-content-center">業務依頼編集フォーム</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-8">
      <%= form_with model: @work, url:public_work_path do |f| %>
      <table class="table">
        <tr>
          <th>宛名</th>
          <td></td>
        </tr>
        <tr>
          <th>件名</th>
          <td><%= f.text_field :title, class:"form-control" %></td>
        </tr>
        <tr>
          <th>目的</th>
          <td><%= f.text_area :purpose, class:"form-control", rows: 5 %></td>
        </tr>
        <tr>
          <th>背景</th>
          <td><%= f.text_area :background, class:"form-control", rows: 5 %></td>
        </tr>
        <tr>
          <th>依頼内容</th>
          <td><%= f.text_area :body, class:"form-control", rows: 8 %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-2">
      <div>
        <%= f.submit "編集内容を保存する", class:"btn btn-info col-12" %>
        <% end %>
      </div>
    </div>
  </div>
</div>